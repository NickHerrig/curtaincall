{{template "base" .}}

{{define "title"}}Create a Theater{{end}}

{{define "main"}}

<form action='/theater/create' method='POST'>
    <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
    {{with .Form}}
        <div>
            <label>Theater:</label>
            {{with .Errors.Get "name"}}
                <label class='error'>{{.}}</label>
            {{end}}
            <input type='text' name='name' value='{{.Get "name"}}'>
        </div>
        <div>
            <input type='submit' value='Publish Theater'>
        </div>
    {{end}}
</form>
{{end}}
